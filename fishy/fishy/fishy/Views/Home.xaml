<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fishy.Views.Home"
             Icon="home.png">
             <!--
                 Title="Home"-->
             
    <ContentPage.Content>
        <StackLayout>
            <Label Text="This is Home page!"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
            <Button Text="Weather Information"
                    Clicked="Button_Clicked"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="200"/>
            <Button Text="New Journal Entry"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="200"/>
            <Button Text="Suggested Trip"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="200"/>
            <Button Text="Report a Pest"
                    Clicked="Button_Clicked_1"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="200"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>