<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fishy.Views.JournalEntry">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Create a Journal Entry!"
                FontSize="Large"/>
            <Label Text="Current Date DateTime.Now()"/>
            <Label Text="Bait Used:"/>
            <Entry Placeholder="Bait"/>
            <Label Text="Lure Used: "/>
            <Entry Placeholder="Lure"/>
            <Button x:Name="CameraButton" Text="Take Photo of your catch"/>
            <Image x:Name="PhotoImage"
                   VerticalOptions="End"
                   HorizontalOptions="EndAndExpand"
                   HeightRequest="330"
                   WidthRequest="600"/>
            <Button x:Name="SaveButton" Text="Save this journal entry"
                    />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>