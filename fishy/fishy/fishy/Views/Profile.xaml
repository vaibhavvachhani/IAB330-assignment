<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fishy.Views.Profile"
             Icon="profile.png">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Aspect="AspectFit" Source="http://profilepicturesdp.com/wp-content/uploads/2018/06/default-profile-picture-gmail-2.png" />
            <Button Grid.Row="1" Grid.ColumnSpan="2" Text="Edit Profile Photo" WidthRequest="150"/>
            <Label Grid.Row="2" Grid.Column="0" Text="Username: "/>
            <Entry Grid.Row="2" Grid.Column="1" Placeholder="Username"></Entry>
            <Label Grid.Row="3" Grid.Column="0" Text="Email: " />
            <Entry Grid.Row="3" Grid.Column="1" Placeholder="Email-Id"/>
            <Label Grid.Row="4" Grid.Column="0" Text="Mobile :"/>
            <Entry Grid.Row="4" Grid.Column="1" Placeholder="Phonenumber"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>